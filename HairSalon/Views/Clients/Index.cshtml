@{
  Layout = "_Layout";
}

@using Salon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>You have no active clients</h3>
}
else
{
  <ul>
  @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId}) </li>
    }
  </ul>
}
