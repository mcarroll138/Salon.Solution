@{
  Layout = "_Layout";
}

@model Salon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylist: @Html.DisplayNameFor(model => model.StylistName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.StylistName)
  @Html.EditorFor(model => model.StylistName)
  @Html.LabelFor(model => model.StylistDescription)
  @Html.EditorFor(model => model.StylistDescription)

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to stylist list", "Index")</p>