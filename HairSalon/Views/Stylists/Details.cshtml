@{
  Layout = "_Layout";
}

@model Salon.Models.Stylist

@using Salon.Models

<h2>Stylist Details</h2>
<hr />
<h3>Stylist Name: @Html.DisplayFor(model => model.StylistName)</h3>

@if (@Model.Clients.Count == 0)
{
  <h3>There are no clients associated with this stylist yet.</h3>
}
else
{
  <h3>Clients:</h3>
  <ul>
  @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId})</li>
    }
  </ul>
}
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Delete Sylist", "Delete", new {id = Model.StylistId})</p>
<p>@Html.ActionLink("Back to list", "Index")</p>



